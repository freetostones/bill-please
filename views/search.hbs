<h1>Search Results</h1>
<div>
  {{#each data}}
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">{{number}}: {{title}}</h3>
    </div>
    <div class="card-body">
      <p>
        <b>Primary Subject:</b> {{primary_subject}}
      </p>
      <p>
        <b>Summary:</b> {{summary}}
      </p>
      <p>
        <b>Sponsor:</b> {{sponsor_title}} {{sponsor_name}} | {{sponsor_party}} - {{sponsor_state}}
      </p>
      <a href="{{congressdotgov_url}}/text">Read full bill here!</a>
    </div>
  </div>
  {{/each}}
</div>
