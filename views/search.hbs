<div class="header-small">
  <h1>Bills including the term: <b>"{{query}}"</b></h1>
</div>
{{#if data }}
  {{#each data}}
  <div class="item">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><b>{{number}}:</b> {{title}}</h3>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <b>Primary Subject:</b> {{primary_subject}}
        </li>
        <li class="list-group-item">
          <b>Summary:</b> {{summary}}
        </li>
        <li class="list-group-item">
          <b>Sponsor:</b> {{sponsor_title}} {{sponsor_name}} | {{sponsor_party}} - {{sponsor_state}}
        </li>
        <li class="list-group-item">
          <b>Number of Co-Sponsors:</b> <span class="badge badge-success badge-pill">{{cosponsors}}</span>
        </li>
        <li class="list-group-item">
          <b>Number of Related Bills:</b> <span class="badge badge-success badge-pill">{{numRelatedBills}}</span>
        </li>
        <li class="list-group-item">
          <b>Status:</b> {{status}}
        </li>
        <li class="list-group-item">
          <b>House Status:</b> {{house}}
        </li>
        <li class="list-group-item">
          <b>Senate Status:</b> {{senate}}
        </li>
        <li class="list-group-item">
          <b>Latest Major Action Date:</b> {{latest_major_action_date}}
        </li>
      </ul>
      <div class="card-body">
        <a class="btn btn-primary" href="{{congressdotgov_url}}/text" class="card-link"><b>READ FULL BILL</b></a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<div class="alert alert-danger" role="alert">
  No results match your query.
</div>
{{/if }}
