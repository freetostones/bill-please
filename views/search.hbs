<h1>Search Results</h1>
<div>
  {{#each data}}
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">{{number}}: {{title}}</h3>
    </div>
    <div class="card-body">
      <ul class="list-group list-group">
        <li class="list-group-item">
          <b>Primary Subject:</b> {{primary_subject}}
        </li>
        <li class="list-group-item">
          <b>Summary:</b> {{summary}}
        </li>
        <li class="list-group-item">
          <b>Sponsor:</b> {{sponsor_title}} {{sponsor_name}} | {{sponsor_party}} - {{sponsor_state}}
        </li>
        <li class="list-group-item">
          Num of Co-Sponsors: {{cosponsors}}
        </li>
        <li class="list-group-item">
          <a href="{{congressdotgov_url}}/text" class="card-link">Read full bill here!</a>
        </li>
      </ul>
    </div>
  </div>
  {{/each}}
</div>
